- if @group_selection.present? && @group_selection.size > 1
  = f.labeled(:group_id) do
    = f.select(:group_id,
               group_options_with_level,
               f.collection_prompt(:group_id),
               { class: 'span6 chosen-select',
                 data: { remote: true,
                         url: role_types_group_roles_path(@group) }})
- else
  = f.hidden_field :group_id

= f.labeled(:type) do
  #role_type_select
    = render 'type_select'

= f.labeled_input_field(:label,
                        data: {provide: :typeahead, source: entry.klass.available_labels},
                        help: t('.help_optional_label'))
= f.labeled_input_field(:is_main_role,
                        help: entry.is_main_role ? 'Cannot deselect main role' : '')

= render_extensions :fields, locals: { f: f }

- if entry.is_main_role
  :javascript
    document.getElementById("role_is_main_role").disabled = true;